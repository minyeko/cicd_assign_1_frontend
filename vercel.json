{
  "version": 2,
  "builds": [
    {
      "src": "src/index.js", // Adjust if your entry point is different
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/(.*).(js|css|jpg|png)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "use": "@vercel/static"
    },
    {
      "src": "/(.*).json",
      "headers": { "cache-control": "public, max-age=0, must-revalidate" },
      "use": "@vercel/static"
    },
    {
      "src": "/favicon.ico",
      "dest": "/favicon.ico",
      "headers": { "cache-control": "public, max-age=604800, immutable" },
      "use": "@vercel/static"
    },
    {
      "src": "/",
      "dest": "src/index.html",
      "headers": { "cache-control": "public, max-age=0, must-revalidate" },
      "use": "@vercel/static-build"
    }
  ]
}
